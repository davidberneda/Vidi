Test {
  i:Integer:=1  // Class variable

  Foo() {
    x::=i
    Console.Put(x) // 1
  }

  final Constant ::= 123 // Class Constant
  
  Bar() {
   a::=1 // Local method variable

   while a<2 {

     i:Integer:=2  // Local variable
     
     Console.Put(i) // 2

     Inner_Class { // Local sub-class
       xyz : Float
     }
     
     inner : Inner_Class
     inner.xyz := i
     
     Foo()
     a += inner.xyz
   }

   Console.Put(a) // 3
  }
  
  shared SharedZ : Text := 'Z' // Shared Class variable
}

{
 T:Test
 T.Bar 
 Console.Put(T.SharedZ)
 Console.Put(Test.SharedZ)
 Console.Put(' ',Test.Constant)
}

//OUT: 213ZZ 123
